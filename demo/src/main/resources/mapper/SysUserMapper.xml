<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mountain.mapper.SysUserMapper">
    
    <!-- 根据用户名查询用户 -->
    <select id="selectByUsername" resultType="com.mountain.entity.SysUser">
        SELECT * FROM sys_user WHERE username = #{username}
    </select>
    
    <!-- 根据手机号查询用户 -->
    <select id="selectByPhone" resultType="com.mountain.entity.SysUser">
        SELECT * FROM sys_user WHERE phone = #{phone}
    </select>
    
</mapper>
